<h3>Add New Album</h3>

<% if flash[:notice] %>
	<p class="flash_notice"><%= flash[:notice] %></p>
<% end %>

<%= form_for Vinyl.new do |f| %>

	<%= f.label :cover, "Cover Image Link" %>
	<%= f.text_field :cover %>

	<%= f.label :artist %>
	<%= f.text_field :artist %><br />

	<%= f.label :album %>
	<%= f.text_field :album %><br />

	<%= f.label :genre %>
	<%= f.text_field :genre %><br />

	<%= f.label :year %>
	<%= f.select :year, (1900..Time.now.year).to_a.reverse, include_blank: "Select Year..." %><br />

	<%= f.submit "Submit" %>
<% end %>

<%= link_to "Show All Albums", vinyls_path %>